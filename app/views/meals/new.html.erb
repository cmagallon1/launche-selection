<%= form_with model: @meal, local:true do |f| %>
  <% if @meal.errors.any? %>
    <div id="error_explanation">
      <h2>
        <% pluralize(@meal.errors.count, "error") %>
        errors prohibit this package to be saved
      </h2>
      <ul>
        <% @meal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1>Create a new entry</h1>

  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, User.all, :id, :name, { include_blank: false, include_hidden: false }) %> 
  </p>

  <%= f.submit :"Create meal" %>
<% end %>

<%= link_to 'Back', meals_path %>

